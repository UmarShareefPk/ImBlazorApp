@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<Test NameChanged = "TestNameHasChanged" @ref="test" ></Test>

@code {
    private int currentCount = 0;
    Test test;

    private void IncrementCount()
    {
        currentCount++;
        test.name = "Gaata Rahe mera dil."; 
    }

    public void TestNameHasChanged(string name)
    {
        
    }
}
